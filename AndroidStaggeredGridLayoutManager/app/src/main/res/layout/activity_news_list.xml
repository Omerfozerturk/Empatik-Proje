<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.saliha.yesilyurt.androidstaggeredgridlayout.NewsList">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/webView1"
        android:layout_alignParentTop="true"
        android:longClickable="true"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"
        android:layout_toLeftOf="@id/webView1"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/webView2"
        android:layout_below="@+id/webView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_toLeftOf="@id/webView2"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/webView3"
        android:layout_below="@+id/webView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_toLeftOf="@id/webView3"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/webView4"
        android:layout_below="@+id/webView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_toLeftOf="@id/webView4"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/webView5"
        android:layout_below="@+id/webView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_toLeftOf="@id/webView5"/>
</RelativeLayout>
